<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.latihan.project_mobile_programming.main.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_channelFragment"
            app:destination="@id/channelFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.latihan.project_mobile_programming.main.ui.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/channelFragment"
        android:name="com.latihan.project_mobile_programming.main.ui.channel.ChannelFragment"
        android:label="fragment_channel"
        tools:layout="@layout/fragment_channel" >
        <action
            android:id="@+id/action_channelFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_channelFragment_to_createChannelFragment"
            app:destination="@id/createChannelFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.latihan.project_mobile_programming.main.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_channelFragment"
            app:destination="@id/channelFragment" />
    </fragment>
    <fragment
        android:id="@+id/createChannelFragment"
        android:name="com.latihan.project_mobile_programming.main.ui.channel.CreateChannelFragment"
        android:label="fragment_create_channel"
        tools:layout="@layout/fragment_create_channel" >
        <action
            android:id="@+id/action_createChannelFragment_to_channelFragment"
            app:destination="@id/channelFragment" />
    </fragment>


</navigation>